
@{
    ViewBag.Title = "SubMenu";
}

<h2>SubMenu</h2>


<div class="container">
    <div class="row text-center">
        @foreach (var i in ViewBag.Class)
        {

            <div class="card">
             
                <div class="col-md-3 col-sm-6">
                    <a href="@Url.Action("Topic","Menu",new { id=i.Id})" style="text-decoration: none;">
                        <div class="thumbnail">
                            <div class="caption">
                                <h3 style="margin-top: 10px;">@i.Name</h3>

                            </div>
                        </div>
                    </a>
                </div>
            </div>
            @*</a>*@


        }
    </div>
</div>