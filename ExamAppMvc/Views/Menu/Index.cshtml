
@{
    ViewBag.Title = "Index";
}
<style>
    .card {
        /* Add shadows to create the "card" effect */
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
    }

        /* On mouse-over, add a deeper shadow */
        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    /* Add some padding inside the card container */
    .container {
        padding: 2px 16px;
    }
</style>

@foreach (var i in ViewBag.Subject)
{

    <div class="card">
        <a href="@Url.Action("SubMenu","Menu",new { id=i.Id})" style="text-decoration: none; color: black;">
            <div class="container">
                <h4><b>@i.Name</b></h4>
            </div>
        </a>
    </div>
}
